<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.7"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="J-Checker"
            id="edu.iastate.jchecker.GUI">
      </category>
      <view
            name="J-Checker"
            icon="icons/icon.gif"
            category="edu.iastate.jchecker.GUI"
            class="edu.iastate.jchecker.gui.views.SampleView"
            id="edu.iastate.jchecker.gui.views.SampleView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="edu.iastate.jchecker.gui.views.SampleView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
